<div>
  <h2>{{ block.settings.title }}</h2>
</div>
<div class=disp>
   {% for block in section.blocks %}
    <div class="flex30">
      <div class="block-contain">
          {% if block.settings.box!= blank %}
              <a href="{{ block.settings.boxurl }}"><img class="occasion-image"  src="{{ block.settings.box | img_url:'master' }}"></a>
           {% endif %}
           <h2>{{ block.settings.text-contant }}</h2>
            <p>{{ block.settings.description }}</p>
      </div>
    </div>
  {% endfor %}
</div>

  <style>
    .disp{
      display:flex;
      justify-content: space-between;
    }
    .occasion-image{
  height: 500px;
  }
  </style>
  
{% schema %}
{
  "name": "occasion",
  "tag": "section",
  "class": "slideshow",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
     {
       "name": "Slide",
       "type": "slide",
       "settings": [
          {
           "type": "image_picker",
           "id": "box",
           "label": "Image"
         }, {
           "type": "url",
           "id": "boxurl",
           "label": "Image Url"
         }
         , {
           "type": "text",
           "id": "text-contant",
           "label": "Text"
         }
         , {
           "type": "textarea",
           "id": "description",
           "label": "Text Area"
         }
       ]
     }
  ],
  "presets": [
    {
      "name": "occasion",
      "settings": {
        "title": "occasion"
      },
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}