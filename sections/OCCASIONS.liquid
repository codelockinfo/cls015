<div>
  <h2>{{ block.settings.title }}</h2>
</div>
<div>
  {% for block in settings.blocks %}
    <div class="flex33">
      {% if block.setting.imgg!= blank %}
        <a href="{{ block.settings.imggurl }}"><img src="{{ block.settings.imgg | image_url:'master' }}"></a>
      {% endif %}
    </div>
    {% endfor %}
</div>


{% schema %}
{
  "name": "OCCASIONS",
  "tag": "section",
  "class": "slideshow",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
     {
       "name": "Slide",
       "type": "slide",
       "settings": [
         {
           "type": "image_picker",
           "id": "imgg",
           "label": "Image"
         },{
           "type": "url",
           "id": "imggurl",
           "label": "Image Url"
         }
       ]
     }
  ],
  "presets": [
    {
      "name": "OCCASIONS",
      "settings": {
        "title": "OCCASIONS"
      },
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}