<div>
  {{ section.settings.title }}
</div>
<div class="container-text">
  <div class="disp-flex">
  {% for block in section.blocks %}
    <div class="flex25">
      <div class="block-contains">
          {% if block.settings.komuk!= blank %}
              <a href="{{ block.settings.komeurl }}"><img class="contant-image" src="{{ block.settings.komuk | img_url:'master' }}"></a>
           {% endif %}
          <div class="sub-title"><h3>{{block.settings.subcontant }}</h3></div>
       <div class="contant"><p>{{ block.settings.pcontant }}</p></div>
      </div>
    </div>
  {% endfor %}
  </div> 
</div>
<style>
  .container-text{
        max-width: 1320px;
        margin: 0 auto;
        padding: 0 15px;
  }
  .disp-flex{
    display: flex;
    flex-wrap: wrap;
         }
  .flex25{
    flex:0 0 25%;
    max-width:25%;
  }
  .contant-image{
      max-width: 100%;
    height: 400px;
    padding:30px;
    transition:all 0.5s linear;     
}
  
  .contant-image:hover{
        transform: scale(1.1);
  filter: drop-shadow(2px 4px 6px black);
  }

</style>
{% schema %}
{
  "name": "acessories",
  "tag": "section",
  "class": "slideshow",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Slideshow"
    }
  ],
  "blocks": [
     {
       "name": "Slide",
       "type": "slide",
       "settings": [
         {
           "type": "image_picker",
           "id": "komuk",
           "label": "Image"
         }, {
           "type": "url",
           "id": "komeurl",
           "label": "Image Url"
         }
       ]
     }
  ],
  "presets": [
    {
      "name": "Accessories",
      "settings": {
        "title": "Accessories"
      }
    }
  ]
}
{% endschema %}